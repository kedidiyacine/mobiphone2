<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/22-ea" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.controllers.ArticlesController">
    <!-- Add your articles-related UI elements here -->
    <children>
        <!-- Remove the empty HBox or add appropriate content -->
        <HBox>
            <Button fx:id="btnRefresh" text="Refresh" />
            <Button fx:id="btnSave" text="Save" />
            <Button fx:id="btnCreate" text="Create" />
            <Button fx:id="btnDelete" text="Delete" />
            <Label layoutX="60.0" layoutY="203.0" text="Type of article:" />
            <ComboBox fx:id="cmbArticleType" layoutX="150.0" layoutY="191.0" prefHeight="26.0"
                prefWidth="190.0" promptText="Choose Article Type"
                onAction="#handleArticleTypeChange" />
        </HBox>

        <TableView fx:id="tblArticles" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="id" prefWidth="200.0" text="Id" />
                <TableColumn fx:id="libelle" prefWidth="200.0" text="Libelle" />
                <TableColumn fx:id="prix_vente" prefWidth="200.0" text="Prix Vente" />
                <TableColumn fx:id="qt_stock" prefWidth="200.0" text="Qt stock" />
                <TableColumn fx:id="reference" prefWidth="200.0" text="Reference" />
                <TableColumn fx:id="modele" prefWidth="200.0" text="Modele" />
                <TableColumn fx:id="marque" prefWidth="200.0" text="Marque" />
                <TableColumn fx:id="date_creation" prefWidth="200.0" text="Date Creation" />
                <TableColumn fx:id="date_maj" prefWidth="200.0" text="Date Maj" />
            </columns>
        </TableView>
    </children>
</VBox>