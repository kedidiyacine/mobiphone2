<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.controllers.ClientsController">
   <children>
      <HBox>
         <Button fx:id="btnRefresh" text="Refresh" />
         <Button fx:id="btnSave" text="Save" />
         <Button fx:id="btnCreate" text="Create" />
         <Button fx:id="btnDelete" text="Delete" />
      </HBox>
      <TableView fx:id="tblClients" HBox.hgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="id" prefWidth="200.0" text="ID" />
            <TableColumn fx:id="cin" prefWidth="200.0" text="CIN" />
            <TableColumn fx:id="nom" prefWidth="200.0" text="Nom" />
            <TableColumn fx:id="prenom" prefWidth="200.0" text="Prenom" />
            <TableColumn fx:id="adresse_de_livraison" prefWidth="200.0" text="Adresse de Livraison" />
            <TableColumn fx:id="email" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="date_creation" prefWidth="200.0" text="Date Creation" />
            <TableColumn fx:id="date_maj" prefWidth="200.0" text="Date Maj" />
         </columns>
      </TableView>
   </children>
</VBox>